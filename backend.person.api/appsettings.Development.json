{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PersonDataStringConnection": "server=localhost;port=3306;database=dbperson;user=root;password=root"
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "C:/Serilog/log-.txt" , "rollingInterval": "Day" } },
      { "Name": "MySQL",
        "Args": {
          "connectionString": "server=localhost;uid=root;pwd=root;database=dblog",
          "tableName": "log",
          "storeTimestampInUtc": true
        }
      }
    ]
  }
}
